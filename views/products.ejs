<!DOCTYPE html>
<html>
    <head>
        <title>Products</title>
        <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
              <a class="navbar-brand" href="#">PRODU</a>
              <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav">
                  <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="index.html">Home</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="#">Products</a>
                  </li>
                </ul>
              </div>
            </div>
          </nav>
          <div class="container-fluid">
            <div class="row">
                <div style="background-color: brown;text-align: center;color:white;margin:10px">
                    <h1>Become a seller now!!</h1><br>
                    <h3>Add products to the website and start your business here</h3>
                    <div style="background-color:white;color:black;width:100px;margin-left:600px;margin-bottom:10px"><a href="/prod_add_form.html">Add Product</a></div>
                </div>
            </div>
            <%products.forEach(product => {%>
            <div class="row">
                    <div class="card">
                        <img class="card-img-top" src="img-1.jpg" alt="Product-1" style="width:100px;height:100px">
                        <div class="card-body">
                          <h5 class="card-title"><%= product.name %></h5><br>
                          <h7 class="card-text">Product ID:<%= product.product_id %></h7><br>
                          <h7 class="card-text">Created At:<%= product.created_at %></h7><br>
                          <h7 class="card-text">Company:<%= product.company%></h7><br>
                          <h7 class="card-text">Rating:<%= product.rating %></h7><br>
                          <h7 class="card-text">Featured:<%= product.featured %></h7><br> 
                        </div>
                    </div>
          </div><%})%>
        </div>
    </body>
</html>